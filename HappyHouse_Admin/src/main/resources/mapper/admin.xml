<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.ssafy.happyhouse.repository.mapper.AdminMapper">
	<select id="select" resultType="member">
		select
		email,
		password,
		name,
		grade
		from
		members
	</select>
	<select id="selectHouseInfoLike" resultType="houseInfoLike">
		SELECT
		d.member_id,
		d.house_no,
		d.reg_date ,
		COUNT(*) AS "count",
		h.dong,
		h.aptname,
		h.code,
		h.buildyear,
		h.jibun,
		h.lat,
		h.lng,
		h.img
		FROM (
		SELECT
		member_id,
		house_no,
		reg_date
		FROM houselike
		WHERE reg_date >= DATE_ADD(now(), INTERVAL -3 MONTH)
		) d INNER JOIN
		houseinfo h
		ON d.house_no = h.no
		GROUP BY house_no
		ORDER BY COUNT(*) DESC
		LIMIT 0,5
	</select>

	<select id="visitCount10" resultType="int">
		select
		visit10s
		from
		visit_count
	</select>

	<select id="visitCount20" resultType="int">
		select
		visit20s
		from
		visit_count
	</select>

	<select id="visitCount30" resultType="int">
		select
		visit30s
		from
		visit_count
	</select>

	<select id="visitCount40" resultType="int">
		select
		visit40s
		from
		visit_count
	</select>

	<select id="visitCount50" resultType="int">
		select
		visit50s
		from
		visit_count
	</select>

	<select id="visitCount60" resultType="int">
		select
		visit60s
		from
		visit_count
	</select>
	<select id="visitF" resultType="int">
		select
		visitf
		from
		visit_count
	</select>
	<select id="visitM" resultType="int">
		select
		visitm
		from
		visit_count
	</select>
</mapper>